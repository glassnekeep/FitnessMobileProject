<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button_ordinary">
        
    </style>

    <style name="colorful_text_view">
        <item name="android:textColor">@color/pink_dark</item>
        <item name="android:textSize">@dimen/very_large_text</item>
    </style>
    
    <style name="username_edit_text" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:hint">Username</item>
        <item name="android:layout_marginTop">@dimen/medium_margin</item>
        <item name="startIconTint">@color/pink_dark</item>
        <item name="startIconDrawable">@drawable/ic_baseline_person_24</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>
    
    <style name="ShapeAppearanceOverlay" parent="">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="flipper_images">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TabStyle" parent="Widget.Design.TabLayout" >
        <item name="tabIndicatorColor">@color/gray</item>
        <item name="tabIndicatorHeight">2.5dp</item>
        <item name="android:elevation">2dp</item>
        <item name="tabIconTint">@color/pink</item>
        <item name="tabSelectedTextColor">@color/pink</item>
        <item name="tabTextColor">@color/black</item>
        <item name="cornerSize">5dp</item>
        <item name="tabTextAppearance">@style/customTabText</item>
    </style>


    <style name="customTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ProfileTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingHorizontal">@dimen/medium_margin</item>
        <item name="android:paddingVertical">@dimen/very_very_small_margin</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/comfortaa_light</item>
    </style>

    <style name="SmallProfileTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingHorizontal">@dimen/medium_margin</item>
        <item name="android:paddingVertical">@dimen/very_very_small_margin</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:textSize">@dimen/very_small_text</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="fontFamily">@font/comfortaa_light</item>
    </style>

    <style name="Separator">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray_light</item>
    </style>

    <style name="ClickableContainer">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
</resources>