<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:clickable="true"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="@dimen/small_margin"
    app:cardElevation="0.5dp"
    android:background="?android:attr/selectableItemBackground"
    app:cardPreventCornerOverlap="true"
    app:cardBackgroundColor="#A82929" >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons1"
        android:background="#D6D6D6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_program"
            android:minHeight="150dp"
            android:minWidth="200dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@color/blue_300" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/program_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/image_program"
            app:layout_constraintStart_toStartOf="@id/image_program"
            android:text="Kesheshi"
            android:layout_margin="@dimen/very_small_margin"
            android:textColor="@color/white"
            android:textSize="@dimen/medium_text"
            android:layout_below="@id/image_program"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>