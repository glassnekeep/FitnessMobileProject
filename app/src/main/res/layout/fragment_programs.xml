<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.ProgramsFragment"
    android:orientation="vertical"
    android:background="@color/white">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/training"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Training"
        android:textSize="40dp"
        android:textColor="#D11560"
        android:paddingTop="40dp"
        android:paddingStart="15dp"
        />
    <androidx.appcompat.widget.AppCompatTextView
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/most_popular"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/training"
        android:text="Most popular"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:paddingStart="15dp"
        android:paddingTop="15dp" />

    <HorizontalScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/most_popular">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/most_popular">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/fisrt_cons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/exercise_for_beginners"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@id/fisrt_cons"
                    android:layout_height="200dp"
                    android:layout_width="250dp"
                    android:src="@drawable/exercise_for_beginners" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingBottom="35dp"
                    android:text="Exercise for beginners"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@id/exercise_for_beginners"
                    app:layout_constraintLeft_toLeftOf="@+id/exercise_for_beginners" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/second_cons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/kesheshi"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@id/second_cons"
                    android:layout_height="200dp"
                    android:layout_width="250dp"
                    android:src="@drawable/kesheshi" />

                <androidx.appcompat.widget.AppCompatTextView
                    app:layout_constraintBottom_toBottomOf="@id/kesheshi"
                    app:layout_constraintLeft_toLeftOf="@+id/kesheshi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kesheshi"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:paddingBottom="35dp"
                    android:paddingStart="80dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>
         </LinearLayout>

    </HorizontalScrollView>

    <androidx.appcompat.widget.AppCompatTextView
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/programs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Programs"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:paddingStart="15dp"
        android:paddingTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/scroll" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/days_with_yoga"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:padding="20dp"
        android:src="@drawable/days_with_yoga"
        app:layout_constraintTop_toBottomOf="@id/programs"
        tools:layout_editor_absoluteX="0dp" />

    <androidx.appcompat.widget.AppCompatTextView
        app:layout_constraintLeft_toLeftOf="@id/days_with_yoga"
        app:layout_constraintBottom_toBottomOf="@id/days_with_yoga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30 days with yoga"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:paddingStart="65dp"
        android:paddingBottom="50dp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/scretch_for_you"
        app:layout_constraintTop_toBottomOf="@id/days_with_yoga"
        android:layout_height="165dp"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:src="@drawable/scretch_for_you" />

    <androidx.appcompat.widget.AppCompatTextView
        app:layout_constraintLeft_toLeftOf="@id/scretch_for_you"
        app:layout_constraintBottom_toBottomOf="@id/scretch_for_you"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scretch for you"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:paddingStart="65dp"
        android:paddingBottom="50dp" />

</androidx.constraintlayout.widget.ConstraintLayout>